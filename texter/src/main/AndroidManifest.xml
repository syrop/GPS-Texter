<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.org.seva.texter"
    android:versionCode="20"
    android:versionName="1.2.7" >
    
     <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
     <uses-permission android:name="android.permission.SEND_SMS" />
     <uses-permission android:name="android.permission.READ_CONTACTS" />
     <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".TexterApplication"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute"
        android:extractNativeLibs="false">

        <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="${googleMapsKey}"/>

        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.SettingsActivity"
            android:theme="@style/FixForPreferenceThemeOverlay"
            android:label="@string/app_name_settings"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.HomeLocationActivity"
            android:theme="@style/FixForPreferenceThemeOverlay"
            android:label="@string/app_name_settings"
            android:screenOrientation="portrait" />

        <service android:name=".presenter.service.TexterService"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>
